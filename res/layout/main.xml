<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start game" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide onscreen buttons" />

    <Button
        android:id="@+id/buttoncontrols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configure on-screen controls" />

    <Button
        android:id="@+id/buttonresetcontrols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset on-screen controls" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plugins" />
    <Button
        android:id="@+id/buttoncopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy config files to sdcard" />

</LinearLayout>

