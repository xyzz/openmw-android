<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.8"
            android:gravity="left|center"
            android:text="Path to configs files" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/configsPath"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|center"
                android:inputType="text" />

            <Button
                android:id="@+id/buttonBrowseConfigsPath"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="15"
                android:text="Browse" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.8"
            android:gravity="left|center"
            android:text="Path to game files" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/textView2"
                android:layout_weight="5"
                android:gravity="left|center"
                android:inputType="text" />

            <Button
                android:id="@+id/buttonBrowseDataPath"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:text="Browse" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.8"
            android:gravity="left|center"
            android:text="Command Line"

            android:textSize="15sp" />

        <EditText
            android:id="@+id/commandLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.6"
            android:gravity="left|center"
            android:inputType="text" />

        <Button
            android:id="@+id/buttoncopy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.6"
            android:gravity="center"
            android:text="Copy config files to sdcard" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ProgressBar>
    </LinearLayout>

</FrameLayout>