<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="genereal_settings"
        android:title="General settings">

        <EditTextPreference
            android:key="data_files"
            android:title="@string/data_files"
            />

        <EditTextPreference
            android:key="commandLine"
            android:title="@string/pref_commandLine"
            />

        <CheckBoxPreference
            android:key="hidecontrols"
            android:title="Hide onscreen buttons" />

        <CheckBoxPreference
            android:key="screen_keeper"
            android:summary="Keep screen always on"
            android:title="Screen" />


    </PreferenceCategory>


    <PreferenceCategory
        android:key="categ1anguage"
        android:title="Language settings">
        <ListPreference
            android:key="encoding"
            android:summary="Game language"
            android:title="Encoding"
            android:dialogTitle="Game language"
            android:entries="@array/encoding_entry"
            android:entryValues="@array/encoding_entry" />

        <CheckBoxPreference
            android:key="subtitiles"
            android:summary="Show subtitles"
            android:title="Subtitles" />


    </PreferenceCategory>


    <PreferenceCategory android:title="@string/pref_ui">
        <EditTextPreference
            android:key="pref_uiScaling"
            android:title="@string/pref_uiScaling"
            android:dialogTitle="@string/pref_uiScaling"
            android:inputType="numberDecimal"
            />

        <EditTextPreference
            android:key="pref_touchpadSensitivity"
            android:title="@string/pref_touchpadSensitivity"
            android:dialogTitle="@string/pref_touchpadSensitivity"
            android:inputType="numberDecimal"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_advanced">
        <ListPreference
            android:key="pref_graphicsLibrary"
            android:title="@string/pref_graphicsLibrary"
            android:dialogTitle="@string/pref_graphicsLibrary"
            android:entries="@array/pref_graphicsLibrary_entries"
            android:entryValues="@array/pref_graphicsLibrary_values"
            android:defaultValue="@string/pref_graphicsLibrary_default"
            android:summary="%s"
        />

    </PreferenceCategory>

</PreferenceScreen>
